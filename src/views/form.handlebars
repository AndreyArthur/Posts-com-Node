<form action="/create-post" method="POST">
    <p>Title</p>
    <input type="text" name="title" value="{{title}}"/>
    <p>Content</p>
    <textarea name="content">{{content}}</textarea>

    {{#if error}}
        <p style="color: red;">{{error}}</p>
    {{/if}}

    <button style="display: block;" type="submit">Submit</button>
</form>
